{
  "compilerOptions": {
    "lib": ["ESNext","DOM"],
    "target": "ESNext",
    "module": "NodeNext",
    "types": ["./haruhi.d.ts", "node"],
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,
    "paths": {
      "@/haruhi/*": ["./haruhi/*"]
    },
    /* Bundler mode */
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    /* Linting */
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  }
}
